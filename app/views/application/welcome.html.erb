
<% if user_signed_in? %>
  <%= render partial: 'instructions' %>
<% end %>

<h1 class="text-center bg-info text-white">Welcome <%= current_user.try(:username)  %>!</h1>

<div class="p-5">

  <div class="row">

    <div class="col">
      <h2 class="border-left rounded border-info pl-2">Invoicer App</h2>
      <h4 class="border-left rounded border-info pl-2">An app for generating invoices</h4>

    </div>

    <div class="col">
      <%= image_tag "logo.png", class: 'float-right'  %>
    </div>

  </div>

  <div class="row p-2">

    <div class="col">
      <div class="flex border-info border p-2 col-6">
        <h4>Created By:</h4>
        <h5>
          Michael Gaudreau <br>
          203 Main Street <br>
          Hartford, CT 06106
        </h5>

      </div>
    </div>

    <div class="row">

      <div class="col m-4">
        <h3>Invioce ID: <%= Invoice.all.count %> </h3> <br>
        <h5>Current Date:     <span class="font-weight-bold"><%= DateTime.now.strftime("%Y-%m-%d") %></span></h5>  <br>
        <h5 class="text-red">Due in <%= TimeDifference.between(DateTime.now, (DateTime.now+6)).humanize %></h5>
        <h5><span class="font-weight-bold"><%= (DateTime.now+7).strftime("%Y-%m-%d") %></span></h5>

      </div>

    </div>

  </div>

  <div class="row border border-dark bg-dark">

    <div class="col">

      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col" colspan="2">Description</th>
            <th scope="col">Quantity</th>
            <th scope="col">Rate</th>
            <th scope="col">Total</th>
          </tr>
        </thead>
        <tbody>

          <tr>
            <th scope="row" colspan="1">1</th>
            <td colspan="2">A simple app to create invoices that can be sent to clients, who can then accept or reject the invoice.</td>
            <td>1</td>
            <td>$0.00</td>
            <td>FREE!<td>
          </tr>

        </tbody>

      </table>

    </div>

  </div>

  <div class="row bg-info text-white pt-2 pb-2">

    <div class="col-8">

    </div>

    <div class="col-4">

      <div class="row">
        <div class="col">
          Sub Total:<br>
          Grand Total:
        </div>

        <div class="col font-weight-bold">
          $0.00 <br>
          FREE!
        </div>

      </div>

    </div>


  </div>

</div>
