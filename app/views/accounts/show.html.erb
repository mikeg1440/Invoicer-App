
<% if @account %>

  <div class="p-5">

    <div class="row">

      <div class="col">
        <h2>Account Name: </h2>
        <h4><%= @account.name %></h4>
      </div>

      <div class="col">
      </div>

      <div class="col">
        <%= link_to "Edit Account", edit_account_path(@account), class: 'btn btn-warning' %>
        <%= button_to "Delete Account", @account, method: :delete, class: 'btn btn-danger' %>
      </div>

    </div>

    <div class="row card mt-3 p-4">
      <%= render partial: 'clients/client', locals: {client: @account.client} %>
    </div>

  </div>


<% else %>

  <h1>No account found!</h1>

<% end %>
