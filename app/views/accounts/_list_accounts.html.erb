
<% if accounts %>
  <% accounts.each do |account| %>

    <hr>

      <%= link_to account.name, account_path(account)  %> - <%= link_to account.client.name, client_path(account.client) %>  => <%= link_to "Create New Invoice", new_account_invoice_path(account) %>

    <hr>

  <% end %>

<% else %>
  <h2>No Accounts to Display!</h2>
<% end %>
