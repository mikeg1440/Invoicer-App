<% if invoices %>
  <% invoices.each do |invoice| %>

    <table class="container">
      <tbody class="table table-hover">
        <tr>
          <th colspan="1">ID</th>
          <th colspan="4">Client</th>
          <th colspan="3">Status</th>
          <th colspan="3">Amount Due</th>
          <th colspan="3">Due Date</th>
        </tr>
        <tr>
          <td colspan="1"><%= invoice.id %></td>
          <td colspan="4"><%= invoice.account.client.name %></td>
          <td colspan="3"><%= invoice.status %></td>
          <td colspan="3"><%= invoice.grand_total %></td>
          <td colspan="3"><%= invoice.due_time %></td>
          <td colspan="3"><%= link_to "Edit", edit_invoice_path(invoice) %></td>
          <td><%= button_to "Delete", { :action => "destroy", :id => invoice.id },
          :confirm => "Are you sure?", :method => :delete %></td>

        </tr>
      </tbody>
    </table>



  <% end %>

<% else %>
  <h2>No Clients to Display!</h2>
<% end %>
